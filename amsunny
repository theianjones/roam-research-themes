/********* Footnotes **********/
/*****To add footnote

:root {
	counter-reset: reference;    
}

/* makes look "ref" really tiny. 
I cannot use "display:none" - because then
no ::after addition would appear */

[data-tag="ref"]{
	font-size: 1%;
	vertical-align: super;
}

[data-tag="ref"]::after{
	font-size: small;
	visibility:visible;
	counter-increment: reference;                   
    content: "" counter(reference);
}

/*hiding following references and embedded blocks */
[data-tag="ref"] + div,
[data-tag="ref"] + .rm-block-ref{
	display:none !important;
}

/*showing embedded block */
[data-tag="ref"] + div:hover,
[data-tag="ref"]:hover + div {
    display: block !important;
    background-color: #f4f3f6 !important;
    color: #000;
    border-radius: 3px; 
    position:relative;
    top: -2px;
    width: 100%;
    z-index: 10;
}


/* schowing references */
[data-tag="ref"] + .rm-block-ref:hover,
[data-tag="ref"]:hover + .rm-block-ref{
    display: inline !important;
    background-color: #f4f3f6;
    color: #000;
    border-radius: 3px;
    margin-left: -4px;
}

/* adding a fancy pin */
[data-tag="ref"] + div::before,
[data-tag="ref"]:hover + div::before, 
[data-tag="ref"] + .rm-block-ref::before,
[data-tag="ref"]:hover + .rm-block-ref::before{
 content: "📌"   ;
}




